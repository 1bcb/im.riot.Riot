{
    "app-id": "im.riot.Riot",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "18.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "riot",
    "rename-icon": "riot-web",
    "copy-icon": true,
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring"
    ],
    "modules": [
        {
            "name": "riot",
            "buildsystem": "simple",
            "build-commands": [
                "ar x riot-web_*.deb",
                "rm -f riot-web_*.deb",
                "tar xf data.tar.xz",
                "cp -r opt/* /app",
                "mkdir -p /app/share/icons/hicolor",
                "cp -r usr/share/icons/hicolor/* /app/share/icons/hicolor",
                "chmod -R a-s,go+rX,go-w /app/Riot",
                "install riot.sh /app/bin/riot",
                "install -Dm644 im.riot.Riot.desktop /app/share/applications/im.riot.Riot.desktop",
                "install -Dm644 im.riot.Riot.appdata.xml /app/share/appdata/im.riot.Riot.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://riot.im/packages/debian/pool/main/r/riot-web/riot-web_1.0.3_amd64.deb",
                    "sha256": "bde6197784941c4f97e8b59f74e7b52b3c80241e410fe3f1690b43e1d3b6afc5"
                },
                {
                    "type": "script",
                    "dest-filename": "riot.sh",
                    "commands": [
                        "exec env TMPDIR=$XDG_CACHE_HOME /app/Riot/riot-web \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "im.riot.Riot.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "im.riot.Riot.desktop"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/vector-im/riot-web/releases/download/v1.0.3/riot-v1.0.3.tar.gz",
                    "sha256": "2585c8b2227fb71e72d76d3c2a19ddb914a4131e3e1be2fe4f2fbd14f9219fbf"
                }
            ]
        }
    ]
}
